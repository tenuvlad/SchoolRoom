@model Servicies.Grades.Dto.GradeDto

@{
    ViewData["Title"] = "Detail";
}

<h2>Detail</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="Score"></label>
        </dt>
        <dd style="color:yellowgreen">
            <label asp-for="Score">@Model.Score</label>
        </dd>
        <dt>
            <label asp-for="DateOfTheGrade"></label>
        </dt>
        <dd style="color:yellowgreen">
            <label asp-for="DateOfTheGrade">@Model.DateOfTheGrade</label>
        </dd>
    </dl>
</div>
<!DOCTYPE html>
<h3>Student name</h3>
<html>
<body>
    <table class="table">
        <tbody>
            @foreach (var item in Model.StudentsList)
            {
            <tr>
                <td>
                    <label asp-for="@item.FullName">@item.FullName</label>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>
